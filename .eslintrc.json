{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "react/prop-types": 0,
    "semi": ["error", "never"],
    "react/prop-types": ["error", { "ignore": ["navigation", "route"] }],
    "comma-dangle": ["error", "only-multiline"]
  },
  "plugins": ["react", "import"]
}
